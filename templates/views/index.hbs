  <body>
    {{>spinner}}
    <section id="login" class="login-section">
      <div class="login-area">
        <div class="crossLoginHeader">
          <h1>Welocome To Task Manager</h1>
          <div class="taskCross">
            <span class="cross"><i class="fa-solid fa-xmark"></i></span>
          </div>
        </div>
        <div class="main-login">
          <img src="./assets/taskImg.jpg" alt="task image" />
          <form class="login-form">
            <div class="login-inputs">
              <input class="loginEmail" type="text" placeholder="Email" />
              <input class="loginPassword" type="password" placeholder="Password" />
            </div>
            <button class="submitBtn" type="submit">Sign in</button>
            <p>Don't have an account? <span class="loginbarlink">Sign up</span> </p>
          </form>
        </div>
      </div>
    </section>
    <section id="signup" class="signup-section">
